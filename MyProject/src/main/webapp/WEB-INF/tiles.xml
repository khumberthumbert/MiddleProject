<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="prodList" template="/WEB-INF/layout/prodList.jsp">
		<put-attribute name="nav" value="/WEB-INF/layout/nav.jsp" />
		<put-attribute name="body" value="/WEB-INF/layout/body.jsp" />
		<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
	</definition>
		
	<definition name="WILDCARD:prod/*" extends="prodList">
		<put-attribute name="body" value="/WEB-INF/views/prod/{1}.jsp"></put-attribute>
	</definition>
		
</tiles-definitions>